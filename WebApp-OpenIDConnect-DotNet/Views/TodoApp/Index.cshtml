
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
        <li><a href="#Home">Home</a></li>
        <li><a href="#TodoList">Todo List</a></li>
        <li><a href="#UserData">User</a></li>
    </ul>
</div>
<div class="container" role="main">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1" style="background-color:azure">
            <div class="page-header">
                <h1>Todo List</h1>
            </div>
            <p>This sample demonstrates how to take advantage of ADAL JS for adding Azure AD authentication to your single page apps.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <div class="app-error"></div>
            <div class="panel-body"></div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="App/Scripts/adal.js"></script>
    <script src="App/Scripts/app.js"></script>
    <script src="App/Scripts/Ctrls/homeCtrl.js"></script>
    <script src="App/Scripts/Ctrls/todoListCtrl.js"></script>
    <script src="App/Scripts/Ctrls/userDataCtrl.js"></script>
    <script type="text/javascript">
        var authContext = new AuthenticationContext(config);
        var user = authContext.getCachedUser();
        if (!user) {
            authContext.login();
        }
    </script>
}